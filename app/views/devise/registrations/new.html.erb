<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class = "form-wrap" >
    <div class = "form-header" >
      <h1 class = "form-header-text" >
        しんきアカウントとうろく
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class = "form-group" >
      <div class = "form-text-wrap" >
        <label class = "form-text">なまえ</label>      
      </div>
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"れい) たろう", maxlength:"40", autofocus: true %>
    </div>
    <div class = "form-group" >
      <div class = "form-text-wrap" >
        <label class = "form-text">メールアドレス</label>      
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"パソコン・けいたいどちらでも可" %>
    </div>
    <div class = "form-group" >
      <div class = "form-text-wrap" >
        <label class = "form-text">パスワード</label>
      </div>       
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6もじいじょうの はんかくえいすうじ" %>
      <p class = "info-text">※えいじとすうじの りょうほうを いれてください</p>
    </div>
    <div class = "form-group" >
      <div class = "form-text-wrap" >
        <label class = "form-text">パスワード(かくにん)</label>      
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"おなじパスワードを いれてください" %>
    <div class='register-btn'>
      <%= f.submit "アカウントとうろく", class:"register-red-btn" %>
    </div>
  </div>
<% end %>

<%= render "shared/second-footer" %>
